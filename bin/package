#!/usr/bin/env bash

set -e

cd "${BASH_SOURCE%/*}/.."

USAGE="usage: bin/package [-v PACKAGE_VERSION]"

while getopts ":v:h" opt; do
  case $opt in
    v)
      PKG_VERSION="v${OPTARG#v}"
      ;;
    h)
      echo $USAGE >&2
      exit
      ;;
    \?)
      echo "Invalid option: -$OPTARG" >&2
      echo $USAGE >&2
      exit 1
      ;;
    :)
      echo "Option -$OPTARG requires an argument" >&2
      echo $USAGE >&2
      exit 1
      ;;
  esac
done

if [ -z "$PKG_VERSION" ]; then
  PKG_VERSION=$(git describe --tag --exact-match)
fi

if [[ $(php --version) = PHP\ 5.4* ]]; then
  PKG_VERSION=${PKG_VERSION}-php54
fi

echo "Packaging $PKG_VERSION"

rm -rf dist || true
mkdir -p dist || exit 1

if [ ! -d "build" ]; then
  exit 1
fi

echo "Creating tarballs"

tar -czf dist/psysh-${PKG_VERSION}.tar.gz build/psysh.phar
tar -czf dist/psysh-${PKG_VERSION}-compat.tar.gz build/psysh-compat.phar
tar -czf dist/psysh-${PKG_VERSION}-php54.tar.gz build/psysh-php54.phar
tar -czf dist/psysh-${PKG_VERSION}-php54-compat.tar.gz build/psysh-php54-compat.phar
